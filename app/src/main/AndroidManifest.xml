<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eval.wit.ai.calcmahjong" >

    <!-- HTTP通信 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".models.clients.AppController"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MenuActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ScoreActivity"
            android:label="@string/title_activity_score"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.MahjongScoringActivity"
            android:label="@string/title_activity_mahjong_scoring"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name=".activities.PlayerRecordActivity"
            android:label="@string/title_activity_player_record"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.PlayerListActivity"
            android:label="@string/title_activity_player_list"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.PlayerRegistrationActivity"
            android:label="@string/title_activity_player_registration"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.ResultActivity"
            android:label="@string/title_activity_result"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activities.RyukyokuActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>
        <activity
            android:name=".activities.SeatingListDialogActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>
    </application>

</manifest>
