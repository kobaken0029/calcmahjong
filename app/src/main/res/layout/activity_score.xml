<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#007700"
    tools:context="eval.wit.ai.calcmahjong.activities.ScoreActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="A"
        android:textColor="#FFFFFFFF"
        android:id="@+id/p1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="25000"
        android:textColor="#FFFFFFFF"
        android:id="@+id/p1Score"
        android:layout_below="@+id/p1"
        android:layout_alignLeft="@+id/p1"
        android:layout_alignStart="@+id/p1"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="B"
        android:textColor="#FFFFFFFF"
        android:id="@+id/p2"
        android:layout_below="@+id/p1Score"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="25000"
        android:textColor="#FFFFFFFF"
        android:id="@+id/p2Score"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/p2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="D"
        android:textColor="#FFFFFFFF"
        android:id="@+id/p4"
        android:layout_alignTop="@+id/p2"
        android:layout_alignRight="@+id/p4Score"
        android:layout_alignEnd="@+id/p4Score" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="25000"
        android:textColor="#FFFFFFFF"
        android:id="@+id/p4Score"
        android:layout_alignTop="@+id/p2Score"
        android:layout_toRightOf="@+id/calc"
        android:layout_toEndOf="@+id/calc"
        android:layout_above="@+id/p3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="C"
        android:textColor="#FFFFFFFF"
        android:id="@+id/p3"
        android:layout_below="@+id/p2Score"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="25000"
        android:textColor="#FFFFFFFF"
        android:id="@+id/p3Score"
        android:layout_below="@+id/p3"
        android:layout_alignLeft="@+id/p3"
        android:layout_alignStart="@+id/p3"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点数計算"
        android:textColor="#FFFFFFFF"
        android:id="@+id/calc"
        android:background="@drawable/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
